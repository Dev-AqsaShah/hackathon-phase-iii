# Todo AI Chatbot (Phase-3) - Frontend Environment Variables

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Backend API URL (Chat endpoint)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# JWT Secret for backend API authentication
# CRITICAL: Must match BETTER_AUTH_SECRET in backend/.env
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-here-minimum-32-characters-change-this-in-production

# Default user (used for all API requests since auth is removed)
DEFAULT_USER_ID=default-user
DEFAULT_USER_EMAIL=user@taskflow.app
DEFAULT_USER_NAME=User

# Application Settings
NEXT_PUBLIC_APP_NAME=Todo AI Chatbot
NEXT_PUBLIC_APP_VERSION=3.0.0

# Node Environment
NODE_ENV=development
